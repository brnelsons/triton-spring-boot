<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
             xmlns:t="urn:import:com.bnelson.triton.client.widget">
    <ui:style>
        .float-right{
            float:right !important;
        }
    </ui:style>
    <b:Container>
        <b:Container>
            <b:Heading size="H2" text="Triton: Game Manager"/>
            <b:Button ui:field="refresh" icon="REFRESH" addStyleNames="{style.float-right}"/>
        </b:Container>
        <t:AlertListWidget ui:field="alertListWidget"/>
        <b:Row ui:field="row">
        </b:Row>
        <b:Container ui:field="externalLinks" />
    </b:Container>
</ui:UiBinder>