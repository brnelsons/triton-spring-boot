<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:t='urn:import:com.bnelson.triton.client'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
             xmlns:widget="urn:import:com.bnelson.triton.client.widget">
    <ui:style>
        .textArea{
            width: 100% !important;
            height: 80px !important;
        }
    </ui:style>
    <b:Panel ui:field="panel">
        <b:PanelHeader>
            <g:Label ui:field="name" text="Some Game"/>
            <g:Label ui:field="status" text="Some Game Status"/>
        </b:PanelHeader>
        <b:PanelBody>
            <g:TextArea ui:field="outputBox" height="150" readOnly="true" addStyleNames="{style.textArea}"/>
        </b:PanelBody>
        <b:PanelFooter>
            <widget:CommandGroup ui:field="commandGroup"/>
            <!--<g:Label text="Custom Command"/>-->
            <!--<g:TextBox ui:field="inputBox"/>-->
            <!--<b:Button ui:field="sendButton" text="Send"/>-->
        </b:PanelFooter>
    </b:Panel>
</ui:UiBinder>