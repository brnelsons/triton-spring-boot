<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
             xmlns:widget="urn:import:com.bnelson.triton.client.widget">
    <ui:style>
        .textArea{
            width: 100% !important;
            height: 200px !important;
        }
        .inline{
            padding-left:10px;
            display: inline;
        }
    </ui:style>
    <b:Panel ui:field="panel">
        <b:PanelHeader>
            <widget:StopLight ui:field="stopLight" />
            <b:html.Span>
                <g:Label ui:field="name" text="Some Game" addStyleNames="{style.inline}"/>
            </b:html.Span>
                <!--<g:Label ui:field="status" text="Some Game Status"/>-->
        </b:PanelHeader>
        <b:PanelBody>
            <g:TextArea ui:field="outputBox" addStyleNames="{style.textArea}"/>
        </b:PanelBody>
        <b:PanelFooter>
            <widget:CommandGroup ui:field="commandGroup"/>
            <!--<g:Label text="Custom Command"/>-->
            <!--<g:TextBox ui:field="inputBox"/>-->
            <!--<b:Button ui:field="sendButton" text="Send"/>-->
        </b:PanelFooter>
    </b:Panel>
</ui:UiBinder>